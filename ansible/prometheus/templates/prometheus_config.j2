global:
  scrape_interval: {{ scrape_interval }} # Set the scrape interval to every {{ scrape_interval }}.
  evaluation_interval: {{ evaluation_interval }} # Evaluate rules every {{ evaluation_interval }}.

# Alertmanager configuration
alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - {{ alertmanager_target }}

rule_files:
   - "{{ rule_file_path }}"

scrape_configs:

  - job_name: 'prometheus'
    static_configs:
    - targets: ['127.0.0.1:9090']
